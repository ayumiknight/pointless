{{? it.relatedR18s.length }}
<div class="jvr-list recommend panel">
	<a href="{{=it.reletedHref}}" class="page-title">
		{{=it.relatedKeyword}}
	</a>
	<div class="list-view f r fc swiper-no-swiping">

		{{~it.relatedR18s :value:index}}
			<a class="list-item f" href="{{=it.zh ? '/zh' : ''}}/jvr?id={{=encodeURIComponent(value.code)}}">
				<img src="{{=value.cover}}" />
				<div class="bottom">
					<div class="code">
						{{=value.code}}
					</div>

					<div class="title">
						{{=it.zh ? value.zhTitle : value.title}}
					</div>	
				</div>
			</a>
		{{~}}
	</div>
</div>
{{?}}


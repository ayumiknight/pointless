<div class="jvr-single-container">
    <div class="jvr-single-wrapper">
        <div class="swiper-slide jvr">
            <div class="single-view panel">
                {{? it.r18 && it.r18.code}}
                <div class="title">
                    <span class='hidden'>Rapidgator and Torrent</span>
                    <span class="code">{{=it.r18.code}}</span>
                    {{=it.zh ? it.r18.zhTitle : it.r18.title}}
                </div>
                <div class="detail">
                    <img src="{{=it.r18.fullCover}}" />
                    {{? it.r18.Galleries}}
                    <div class="gallery">
                        {{~ it.r18.Galleries :value:index}}
                        <img src="{{=value.url.replace(/(-\d+\.\w+)$/, 'jp$1')}}" alt="">
                        {{~}}
                    </div>
                    {{?}}
                </div>
                <div class="my-tab">
                    <input {{=it.r18.rapidgator ? "" : 'checked'}} id="tab1" type="radio" name="pct" />
                    <input id="tab3" type="radio" name="pct" />
                    <input {{=it.r18.rapidgator ? "checked" : ""}} id="tab4" type="radio" name="pct" />
                    <nav>
                        <ul>
                            <li class="tab1">
                                <label for="tab1">{{=it.zh ? '详情' : 'Details'}}</label>
                            </li>
                            <li class="tab3">
                                <label for="tab3">{{=it.zh ? '截屏' : 'ScreenShots'}}</label>
                            </li>
                            <li class="tab4">
                                <label for="tab4">Rapidgator</label>
                            </li>
                        </ul>
                    </nav>
                    <section>
                        <div class="tab1">
                            {{ for(var prop in it.r18.details) { }}
                            <div class="line">
                                <div class="label">
                                    {{=prop}}:
                                </div>
                                <div class="value">
                                    {{=it.r18.details[prop]}}
                                </div>
                            </div>
                            {{ } }}
                        </div>
                        <div class="tab3">
                            {{? it.r18.pixhost}}
                            {{~it.r18.pixhost :value:index}}
                            <a href="{{=value.link}}" class="external" rel="nofollow">
                                <img src="{{=value.thumb}}" border="0">
                            </a>
                            {{~}}
                            {{?}}
                        </div>
                        <div class="tab4">
                            {{? it.r18.rapidgator}}
                                <div class="rg-ads">
                                    <a href="https://rapidgator.net/article/premium/ref/4240100" target="_blank">
                                        <img src="/static/rgPremium.gif" border="0" width="300" height="55" alt="Rapidgator.net"/>
                                        <div>
                                            Join us now !!<br/>
                                            Enjoy your hundreds of JVR videos!! <br/>
                                        </div>
                                    </a>
                                </div>
                            {{~it.r18.rapidgator :value:index}}
                            <a href="{{=value}}" rel="nofollow" onclick="window.logRClick && window.logRClick('{{=it.r18.code}}')">{{=value}}</a>
                            {{~}}
                            {{?}}
                        </div>
                    </section>
                </div>
            </div>
            {{??}}
            {{#def.empty}}
            {{?}}
        </div>
    </div>
    {{#def.recommendSection}}
</div>
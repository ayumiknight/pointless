<div class="category-view f c fc">
	<div class="page-title">Categories</div>
	{{ for(var prop in it.categories) { }}
		<div class="category-block f c fc">
			<div class="category-title f fc">
				{{=prop}}
			</div>
			<div class="category-items f r fc">
				{{~ it.categories[prop] :value:index}}
					{{? prop === 'Top Categories' }}
						<a class="list-item image" href="/genre?genre={{=encodeURIComponent(value.en)}}">
							<img src="{{=value.logo}}"/>
							<div class="bottom">
								<div class="title">
									{{=value.en}}
								</div>	
							</div>
						</a>
					{{??}}
						<a class="list-item flat" href="/genre?genre={{=encodeURIComponent(value.en)}}">
							{{=value.en}}
						</a>
					{{?}}
				{{~}}
			</div>
		</div>
	{{ } }}
</div>


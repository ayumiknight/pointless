<div class="side-menu" style="background-image: url(/static/nav{{=Math.ceil(Math.random() * 3)}}.jpg)">
	<div class="site-name">
		JvrLibrary
	</div>
	<div class="search">
		<input id="idSearch" type="text" placeholder="{{=it.zh ? '影片ID搜索' : 'Search by Film Id'}}">
	</div>
	<div class="right">{{=it.zh ? '日本VR影片' : 'Japan VR films Only'}}</div> 
</div>
<div class="real-side-menu f r">
	
	<a href="{{=it.zh ? '/zh' : ''}}/rapidgator" class="rapidgator {{= it.currentPath === '/rapidgator' ? 'current' : ''}}" style="width:100%;text-align:left;">{{=it.zh ? 'Rapidgator土豪快速下载区' : 'Rapidgator! Fast Donwload Section!' }}</a>
	<a href="{{=it.zh ? '/zh' : ''}}/torrent" class="rapidgator {{= it.currentPath === '/torrent' ? 'current' : ''}}" style="width:100%;text-align:left;">{{=it.zh ? 'BT免费慢速下载区' : 'Torrent! Slow Donwload Section!' }}</a>
	
	<a href="{{=it.zh ? '/zh' : ''}}/" class="{{= it.currentPath === '/' ? 'current' : ''}}">{{=!it.zh ? 'New' : '最新' }}</a>
	<a rel="nofollow" href="{{=it.zh ? '/zh' : ''}}/ranking" class="{{= it.currentPath === '/ranking' ? 'current' : ''}}">{{=!it.zh ? 'Top' : '排行' }}</a>
	<a rel="nofollow" href="{{=it.zh ? '/zh' : ''}}/categories" class="{{= it.currentPath === '/categories' ? 'current' : ''}}">{{=!it.zh ? 'Genre' : '类别' }}</a>
	<a rel="nofollow" href="{{=(it.zh ? '' : '/zh') + it.currentUrl.replace(/\/zh/i, '')}}">{{=it.zh ? 'Eng' : '中文' }}</a>

	{{? it.r18 && it.r18.previous}}
	<a href="{{=it.zh ? '/zh' : ''}}/jvr?id={{=it.r18.previous}}">
		<i class="fas fa-chevron-left" /></i>
	</a>
	{{?}}
	{{? it.r18 && it.r18.next}}
	<a href="{{=it.zh ? '/zh' : ''}}/jvr?id={{=it.r18.next}}">
		<i class="fas fa-chevron-right" /></i>
	</a>
	{{?}}
</div>

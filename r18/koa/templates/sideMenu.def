<div class="side-menu f r fc">
	<div class="site-name">
		JvrLibrary

	</div>
	<div class="search">
		<input id="idSearch" type="text" placeholder="{{=it.zh ? '影片ID搜索' : 'Search by Film Id'}}">
	</div>
	<div class="right">{{=it.zh ? '日本VR影片' : 'Japan VR films Only'}}</div> 
</div>
<div class="real-side-menu f r">
	<a href="{{=it.zh ? '/zh' : ''}}/" class="{{= it.currentPath === '/' ? 'current' : ''}}">{{=!it.zh ? 'Home' : '首页' }}</a>
	<a href="{{=it.zh ? '/zh' : ''}}/casts" class="{{= it.currentPath === '/casts' ? 'current' : ''}}">{{=!it.zh ? 'Casts' : '女优' }}</a>
	<a href="{{=it.zh ? '/zh' : ''}}/ranking" class="{{= it.currentPath === '/ranking' ? 'current' : ''}}">{{=!it.zh ? 'Ranking' : '排行' }}</a>
	<a href="{{=it.zh ? '/zh' : ''}}/studios" class="{{= it.currentPath === '/studios' ? 'current' : ''}}">{{=!it.zh ? 'Studios' : '发行商' }}</a>
	<a href="{{=it.zh ? '/zh' : ''}}/categories" class="{{= it.currentPath === '/categories' ? 'current' : ''}}">{{=!it.zh ? 'Genre' : '类别' }}</a>

	{{? it.r18 && it.r18.previous}}
	<a href="{{=it.zh ? '/zh' : ''}}/jvr?id={{=it.r18.previous}}">
		<i class="fas fa-chevron-left" /></i>
	</a>
	{{?}}
	{{? it.r18 && it.r18.next}}
	<a href="{{=it.zh ? '/zh' : ''}}/jvr?id={{=it.r18.next}}">
		<i class="fas fa-chevron-right" /></i>
	</a>
	{{?}}

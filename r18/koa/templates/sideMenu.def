<div class="side-menu" style="background-image: url(/static/nav{{=Math.ceil(Math.random() * 3)}}.jpg)">
	<div class="site-name">
		JvrLibrary
		<div class="sub-name">{{=it.zh ? '日本VR影片' : 'Japan VR Films Only'}}</div>
	</div>
	<div class="search">
		<input id="idSearch" type="text" placeholder="Eg. IPVR OR IPVR-070">
	</div>
	<div id="login"></div>
</div>
<script>
	window.getCookie = function(name) {
		var match = document.cookie.match(new RegExp('(^| )' + name + '=([^;]+)'));
		if (match) return match[2];
	};
	window.setCookie = function(key, value, times) {
		var date = new Date();
		date.setTime(date.getTime() + times * 1000); 
		document.cookie = key + "=" + encodeURIComponent(value) + ";path=/;expires=" + date.toGMTString();
	};
	window.setNonVR = function(on) {
		let current = !!getCookie('nonVR');
		console.log('invoked');
		if (current != on) {
			setCookie('nonVR', on ? 'true' : '', 60 * 60 * 24 * 30);
			setTimeout(function() {
				location.href = location.origin;
			}, 0);
		}
	}
</script>
<div class="real-side-menu f r">
	<a class="half {{= it.nonVR ? '' : 'current'}}" onclick="setNonVR(false)">Go VR Only! <span>{{=it.vr > 0 ? `+${it.vr}` : ''}}</span></a>
	<a class="half {{= it.nonVR ? 'current' : ''}}" onclick="setNonVR(true)">Go Old School! <span>{{=it.nonvr > 0 ? `+${it.nonvr}` : ''}}</span></a>
	
	<a href="{{=it.zh ? '/zh' : ''}}/" class="{{= it.currentPath === '/' ? 'current' : ''}}">{{=!it.zh ? 'New' : '最新' }}</a>
	<a rel="nofollow" href="{{=it.zh ? '/zh' : ''}}/ranking" class="{{= it.currentPath === '/ranking' ? 'current' : ''}}">{{=!it.zh ? 'Top' : '排行' }}</a>
	<a rel="nofollow" href="{{=it.zh ? '/zh' : ''}}/casts" class="{{= it.currentPath === '/casts' ? 'current' : ''}}">{{=!it.zh ? 'Cast' : '女优' }}</a>
	<a rel="nofollow" href="{{=it.zh ? '/zh' : ''}}/categories" class="{{= it.currentPath === '/categories' ? 'current' : ''}}">{{=!it.zh ? 'Genre' : '类别' }}</a>
	<a rel="nofollow" href="{{=(it.zh ? '' : '/zh') + it.currentUrl.replace(/\/zh/i, '')}}">{{=it.zh ? 'Eng' : '中文' }}</a>

	{{? it.r18 && it.r18.previous}}
	<a href="{{=it.zh ? '/zh' : ''}}/jvr?id={{=it.r18.previous}}">
		<i class="fas fa-chevron-left" /></i>
	</a>
	{{?}}
	{{? it.r18 && it.r18.next}}
	<a href="{{=it.zh ? '/zh' : ''}}/jvr?id={{=it.r18.next}}">
		<i class="fas fa-chevron-right" /></i>
	</a>
	{{?}}
</div>
